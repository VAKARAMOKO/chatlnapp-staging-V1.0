<div class="column is-centered ">
  <% if user_signed_in? %>
    <article class="media box">
      <div class="media-left">
        <figure class="image is-32x32 is-rounded">
           <%= link_to  edit_user_registration_path, class: "button" do %>
                <img src="https://bulma.io/images/placeholders/32x32.png">
           <% end %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
            <span>
                            
            </span>
            
          </p>

          <p class="content container">
          
            <%= link_to root_path, class:"is-info" do %>
              <span>Ajouter votre question ou lien ?</span>
            <% end %>
          </p>
        </div>
      </div>
    </article>
  <% end %>
  <div class="media-content">
  <% @courses.each do | course| %>
    <div class="box">
      <small class="meta_courses" >
       Recommandations: sujet de <%= course.material %>, <%= course.level_course %>
      </small>
      <!--le titre/!-->
      <div class="title">
        <p><%= course.title %></p>    
      </div><br> 
      <!-- avatar /!-->      
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <%= link_to  edit_user_registration_path, class: "button" do %>
                <img src="https://bulma.io/images/placeholders/64x64.png">
           <% end %>
          </figure>            
        </div>
        <!--infos createur Nom_complet et son bio/!-->
        <div class="media-content">
          <div class="content user-meta-data">
            <span class="meta_info_user">

            </span>              
          </div>
        </div>
      </article>
      <!--le corps du course /!-->
      <div class="media-content">
        <div class="content">
          <div class="box meta_description">
            <%= sanitize course.description %>
            
          </div>
        </div>
      </div>

      <!--options supplementaires:/!-->
      <% if current_user.id == @course.user_id %>        
        <nav class="level">
          <div class="level-left is-mobile is-right">
            <%= link_to course, class: "level-item" do %>
              <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_course_path(course), class: "level-item" do %>
              <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to "supprimez", method: :delete, data: { confirm: "Etes-vous sûre de vouloir supprimez ?" } do %>
                <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %> 
          </div>              
        </nav>
      <% else %>
        <% link_to root_path, class:"button is-succes is-medium" do%>
          <i>Obtenir le sujet</i>
        <% end %>
      <% end %>
      <!--affiché les commentaires deja cree /!-->
      <!--soumettre le formulaire de commentaire/!-->
      
    </div>
  <% end %>
  </div>
</div>